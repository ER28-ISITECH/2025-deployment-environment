{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env*"],
  "globalEnv": [
    "MONGODB_URI"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        ".env*",
        "src/**",
        "test/**"
      ],
      "outputs": [
        "coverage/**",
        "!coverage/lcov-report/**"
      ]
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "inputs": [
        ".env*",
        "src/**",
        "test/**"
      ],
      "outputs": [
        "coverage/**",
        "!coverage/lcov-report/**"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "inputs": [
        ".env*"
      ],
      "env": [
        "PORT",
        "MONGODB_URI"
      ],
      "cache": false,
      "persistent": true
    }
  }
}